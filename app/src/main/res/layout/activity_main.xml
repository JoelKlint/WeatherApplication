<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.klintelligence.myapplication.MainActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Daejeon"
            android:textSize="60sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:text="Updated"
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/updatedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:text="15:34"
                android:textAlignment="center"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:text="8°C"
                    android:textAlignment="textStart"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/currentCond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rain"
                    android:textAlignment="textStart"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/currentRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="100% chance of rain"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <ImageView
            android:id="@+id/currentCondImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="rainy"
            android:visibility="visible"
            app:srcCompat="@drawable/icons8_rain_96" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:text="Hourly forecast"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hourOneTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/hourOneCondImg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/hourOneTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hourOneRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hourTwoTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/hourTwoCondImg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/hourTwoTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hourTwoRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hourThreeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/hourThreeCondImg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/hourThreeTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hourThreeRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hourFourTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/hourFourCondImg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/hourFourTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hourFourRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hourFiveTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/hourFiveCondImg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/hourFiveTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hourFiveRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="Daily forcast"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayOneDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/dayOneCondImg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/dayOneTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dayOneRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayTwoDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/dayTwoCondImg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/dayTwoTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dayTwoRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayThreeDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/dayThreeCondImg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/icons8_partly_cloudy_day_96" />

            <TextView
                android:id="@+id/dayThreeTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16°C"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dayThreeRainProb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40%"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
